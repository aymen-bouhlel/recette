{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block MonTitre %}
    Login
{% endblock %}

{% block body %}
    {# LES MESSAGES D'ERREURS #}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    

    <form action="{{ path('connexion') }}" method="post">
        <fieldset>
            <div class="form-group">
                <label for="username">Username :</label>
                <input required class="form-control" name="_username" placeholder="Entrer votre nom d'utilisateur">
            </div>
            <div class="form-group">
                <label for="password">Password :</label>
                <input required class="form-control" name="_password" placeholder="Entrer votre nom mot du passe">
            </div>
            <button type="submit" class="btn btn-primary">login</button>
        </fieldset>
    </form>
{% endblock %}
