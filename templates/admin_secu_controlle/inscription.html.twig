{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block MonTitre %}
    Inscription sur le site
{% endblock %}

{% block body %}
    {{ form_start(InscriptionForm) }}
        {{ form_row(InscriptionForm.username, {
            "attr" : {
                "placeholder" : "Saisir votre nom d'utilisateur",
                "class" : "bg-secondary" 
            },
            "label" : "Votre login:"
        }) }}

        {{ form_row(InscriptionForm.password, {
            "attr" : {
                "placeholder" : "Saisir votre mot de passe",
                "class" : "bg-secondary",
            },
            "label" : "Votre mot de pass:"
        }) }}

        {{ form_row(InscriptionForm.verificationPassword, {
            "attr" : {
                "placeholder" : "Saisir une autre fois votre mot de passe",
                "class" : "bg-secondary",
            },
            "label" : "Votre mot de pass:"
        }) }}
        
        {{ form_widget(InscriptionForm) }}  
        <input type="submit" class="btn btn-primary" value="Valider">    
    {{ form_end(InscriptionForm) }}
    
{% endblock %}
