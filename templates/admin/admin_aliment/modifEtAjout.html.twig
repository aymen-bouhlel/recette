{% extends 'base.html.twig' %}

{% block title %}Modification Aliment{% endblock %}

{% block MonTitre %}
    {% if isModification %}
        Modification de l'aliment {{ aliment.nom }}
    {% else %}
        Ajout d'un aliment
    {% endif %}
    
    
{% endblock %}

{% block body %}
    {{ form_start(formAliment) }}
        <div class="row">
            {# 1.COLONNE GAUCHE#}
            <div class="col-6">
                {% if isModification %}
                     <img src="{{ asset('images/aliments/' ~ aliment.image) }}" style="width:25%;">
                {% endif %}
                <div>{{ form_row(formAliment.imageFile) }}</div>
                <div>{{ form_row(formAliment.nom, {"attr" : {'class' : 'text-danger bg-success'}, "label" : "Nom de l'aliment:"}) }}</div>
                <div>{{ form_row(formAliment.type) }}</div>
            </div>
            {# 2.COLONNE DROITE #}
            <div class="col-6">
                {{ form_row(formAliment) }}
            </div>
        </div>   
        <input type="submit" class="btn btn-primary" value="Enregistrer">
    {{ form_end(formAliment) }}
{% endblock %}

