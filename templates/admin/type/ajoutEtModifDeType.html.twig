{% extends 'base.html.twig' %}

{% block title %}Type {{ type.libelle }}{% endblock %}

{% block MonTitre %}
    Modification de Type {{ type.libelle }}
{% endblock %}

{% block body %}
    {{ form_start(formType) }}
        <div class="row">
            {# 1.COLONNE GAUCHE#}
            <div class="col-6">
                {% if isModification %}
                     <img src="{{ asset('images/types/' ~ type.image) }}" style="width:25%;">
                {% endif %}
                <div>{{ form_row(formType.libelle, {"attr" : {'class' : 'text-danger bg-success'}, "label" : "Nom de l'aliment:"}) }}</div>
                <div>{{ form_row(formType.image) }}</div>
            </div>
        </div>   
        <input type="submit" class="btn btn-primary" value="Valider">
    {{ form_end(formType) }}
{% endblock %}


