<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# BOOTSWATCH: BOOTSTRAP #}
        <link rel="stylesheet" href="https://bootswatch.com/4/litera/bootstrap.min.css" >

        {# CSS #}
        <link rel="stylesheet" href="{{asset('css/main.css')}}" >

        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {# NAVBAR: MENU #}
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="{{ path('aliments') }}">FaitTaRecette.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    {# DROPDOWN MENU#}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Aliments
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('aliments') }}">aliments</a>
                            <div class="dropdown-divider"></div>
                            {# SI JE SUIS CONNECTﾃ右, AFICHER DANS LE MENU ADMINISTRATION #}
                            {% if app.user %}
                                <a class="dropdown-item" href="{{ path('admin_aliment') }}">administration</a>
                            {% endif %}
                        </div>
                    </li>
                    {# DROPDOWN TYPE#}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Types
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{ path('types') }}">types</a>
                            <div class="dropdown-divider"></div>
                            {# SI JE SUIS CONNECTﾃ右, AFICHER DANS LE MENU ADMINISTRATION #}
                            {% if app.user %}
                                <a class="dropdown-item" href="{{ path('admin_types') }}">administration</a>
                            {% endif %}
                        </div>
                    </li>
                    {# SI JE SUIS PAS CONNECTﾃ右, AFICHER DANS LE MENU INSCRIPTION ET LOGIN #}
                    {% if not app.user %}
                         {# INSCRIPTION #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
                        </li>
                        {# LOGIN #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('connexion') }}">Login</a>
                        </li>
                    {# SI JE SUIS CONNECTﾃ右, AFICHER DANS LE MENU QUE LOGOUT #}
                    {% else %}
                        {# LOGOUT #}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('deconnexion') }}">Logout</a>
                        </li>
                    {% endif %} 
                </ul>
            </div>
        </nav>
        {# TITRE #}
        <h1 class="border border-primary rounded p-2 m-2 text-white bg-info">{% block MonTitre %}{% endblock %}</h1>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}

        {# BOOTSTRAP: javascripts #}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
</html>
